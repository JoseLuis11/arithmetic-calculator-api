{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@functions": ["src/transport-layer/functions"],
      "@functions/*": ["src/transport-layer/functions/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
